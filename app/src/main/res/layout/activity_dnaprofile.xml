<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profile_background_color"
    tools:context=".Activities.DNAProfileActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
   <LinearLayout
       android:layout_marginBottom="20dp"
       android:id="@+id/linear_top"
       android:gravity="center"
       android:background="@color/colorPrimary"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <de.hdodenhof.circleimageview.CircleImageView
           android:layout_margin="25dp"
           android:layout_marginTop="20dp"
           xmlns:app="http://schemas.android.com/apk/res-auto"
           android:id="@+id/profile_image"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:src="@drawable/dr1"
           app:civ_border_width="2dp"
           app:civ_border_color="#FFFF"/>
       <TextView
           android:id="@+id/profile_name"
           android:textSize="16sp"
           android:padding="8sp"
           android:gravity="center"
           android:textStyle="bold"
           android:textColor="@color/white"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Rishabh Bihari"/>
       <TextView
           android:id="@+id/profile_email"
           android:layout_marginBottom="10dp"
           android:textSize="16sp"
           android:gravity="center"
           android:textColor="@color/white"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="rbhu00@gmail.com"/>

       <TextView
           android:id="@+id/profile_state"
           android:layout_marginBottom="10dp"
           android:textSize="16sp"
           android:gravity="center"
           android:textColor="@color/white"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="America"/>

       <TextView
           android:id="@+id/profile_College"
           android:layout_marginBottom="10dp"
           android:textSize="16sp"
           android:gravity="center"
           android:textColor="@color/white"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="AIIMS,New Delhi"/>
   </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_top">
    <android.support.v7.widget.CardView
       android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
