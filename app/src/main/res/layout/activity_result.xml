<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".Activities.ResultActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linar"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:background="@color/orange"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/result_logo"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25sp"
                        android:gravity="center"
                        android:text=""
                        android:id="@+id/user_rank"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                </LinearLayout>


                <TextView
                    android:id="@+id/total_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Out of 72900"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="30sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="40dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/review"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:background="@color/white"
                        android:padding="2dp"
                        android:text="REVIEW"
                        android:textColor="#f37636" />

                    <Button
                        android:id="@+id/btn_share"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:background="@color/white"
                        android:padding="5dp"
                        android:text="SHARE"
                        android:textColor="#f37636" />

                </LinearLayout>

            </LinearLayout>

           <RelativeLayout
               android:layout_marginTop="350dp"
               android:gravity="bottom|end"
               android:layout_marginLeft="30sp"
               android:layout_marginRight="30sp"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:id="@+id/top"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="bottom"
                   android:background="@color/white"
                   android:orientation="vertical"
                   android:visibility="visible">

                   <TextView
                       android:id="@+id/user_number"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:paddingTop="10dp"
                       android:textColor="#939598"
                       android:textSize="20sp"
                       android:text="85"
                       android:textStyle="normal
" />


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:orientation="vertical">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="0sp"
                           android:layout_marginTop="10dp"
                           android:orientation="vertical">



                           <TextView
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:id="@+id/total_question"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="uu"
                               android:textColor="#939598"
                               android:textSize="20sp"
                               android:textStyle="normal" />
                       </LinearLayout>


                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="0sp"
                           android:layout_marginTop="10dp"
                           android:orientation="vertical">

                           <TextView
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:id="@+id/percentageValue"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="#939598"
                               android:paddingLeft="10dp"
                               android:textSize="20sp"
                               android:text="lfl,f,dldl"
                               android:textStyle="normal" />
                       </LinearLayout>


                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="30sp"
                           android:layout_marginTop="20dp"
                           android:layout_marginRight="30sp"
                           android:orientation="horizontal">

                           <LinearLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_margin="5sp"
                               android:layout_weight="1"
                               android:orientation="vertical">


                               <FrameLayout
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content">
                                   <me.tankery.lib.circularseekbar.CircularSeekBar
                                       android:id="@+id/correct"
                                       android:layout_width="65dp"
                                       app:cs_progress = "0"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="center_horizontal"
                                       app:cs_circle_color = "@color/app_bg"
                                       app:cs_circle_progress_color = "@color/green"
                                       app:cs_pointer_color = "@color/green"
                                       app:cs_negative_enabled="true"
                                       app:cs_circle_style="butt"
                                       app:cs_circle_stroke_width="6dp"
                                       app:cs_pointer_stroke_width="4dp"
                                      />


                                   <TextView
                                       android:id="@+id/correctText"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="center"
                                       android:textSize="15sp"
                                       android:textColor="@color/orange"
                                       android:text=""/>

                               </FrameLayout>

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center"
                                   android:paddingTop="5dp"
                                   android:gravity="center"
                                   android:text="Correct" />

                           </LinearLayout>

                           <LinearLayout
                               android:layout_width="wrap_content"

                               android:layout_height="wrap_content"
                               android:layout_margin="5sp"
                               android:layout_weight="1"
                               android:orientation="vertical">

                               <FrameLayout
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content">
                                   <me.tankery.lib.circularseekbar.CircularSeekBar
                                       android:id="@+id/wrong"
                                       android:layout_width="65dp"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="center_horizontal"
                                       app:cs_circle_color = "@color/app_bg"
                                       app:cs_circle_progress_color = "@color/red"
                                       app:cs_pointer_color = "@color/red"
                                       app:cs_negative_enabled="true"
                                       app:cs_circle_style="butt"
                                       app:cs_circle_stroke_width="6dp"
                                       app:cs_pointer_stroke_width="4dp"
                                       />


                                   <TextView
                                       android:id="@+id/wrongText"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="center"
                                       android:textSize="15sp"
                                       android:textColor="@color/orange"
                                       android:text=""/>

                               </FrameLayout>

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center"
                                   android:paddingTop="5dp"
                                   android:text="Wrong" />

                           </LinearLayout>

                           <LinearLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_margin="5sp"
                               android:layout_weight="1"
                               android:orientation="vertical">

                               <FrameLayout
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content">
                                   <me.tankery.lib.circularseekbar.CircularSeekBar
                                       android:id="@+id/skipped"
                                       android:layout_width="65dp"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="center_horizontal"
                                       app:cs_circle_color = "@color/app_bg"
                                       app:cs_circle_progress_color = "@color/vedio_text_color"
                                       app:cs_pointer_color = "@color/vedio_text_color"
                                       app:cs_negative_enabled="true"
                                       app:cs_circle_style="butt"
                                       app:cs_circle_stroke_width="6dp"
                                       app:cs_pointer_stroke_width="4dp"
                                     />


                                   <TextView
                                       android:id="@+id/skippedText"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="center"
                                       android:textSize="15sp"
                                       android:textColor="@color/orange"
                                       android:text=""/>
                               </FrameLayout>

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center"
                                   android:paddingTop="5dp"
                                   android:text="Skipped" />

                           </LinearLayout>
                       </LinearLayout>


                   </LinearLayout>




               </LinearLayout>

               <LinearLayout
                   android:layout_below="@id/top"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

                   <android.support.v7.widget.RecyclerView
                       android:id="@+id/recycler"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">

                   </android.support.v7.widget.RecyclerView>


               </LinearLayout>
           </RelativeLayout>


        </FrameLayout>


    </RelativeLayout>


</ScrollView>